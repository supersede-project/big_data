extends layout
block headers
    link(rel='stylesheet', href='/stylesheets/loading.css')
    script(src='/js/client_view_event.js')
    link(href='/js/jsoneditor/jsoneditor.min.css', rel='stylesheet', type='text/css')
    script(src='/js/jsoneditor/jsoneditor.min.js')

block content

    .container
        .banner
            .row
                .col-lg-8.col-md-7.col-sm-6
                    h2 View Event
                    br

            .container-fluid
                .col-lg-8
                    .well.bs-component
                        form#releaseForm(role='form').form-horizontal
                            .form-group#eventForm
                                label.col-lg-2.control-label(for='event') Event
                                .col-lg-10
                                    input#event.form-control(type='text', name='event', required='required',readonly='')

                            .form-group#jsonInstancesForm
                                label.col-lg-2.control-label(for='event') JSON Instances
                                .col-lg-10
                                    #jsoneditor(style='width: 100%; height: 400px;')

                            .form-group#kafkaTopicForm
                                label.col-lg-2.control-label(for='kafkaTopic') Kafka Topic
                                .col-lg-10
                                    input#kafkaTopic.form-control(type='text', name='kafkaTopic', required='required',readonly='')

                            .form-group#dispatchForm
                                label.col-lg-2.control-label(for='event') Dispatch to Data Lake
                                .col-lg-10
                                    input#dispatch(type='checkbox').checkbox

                            .form-group#dispatchToForm
                                label.col-lg-2.control-label(for='event') Dispatch To
                                .col-lg-10
                                    input#dispatchTo.form-control(type='text', name='dispatchTo', required='required',readonly='')

                            .form-group#platformForm
                                label.col-lg-2.control-label(for='event') Platform
                                .col-lg-10
                                    input#platform.form-control(type='text', name='platform', required='required',readonly='')

                            .form-group#tenantForm
                                label.col-lg-2.control-label(for='event') Tenant
                                .col-lg-10
                                    input#tenant.form-control(type='text', name='tenant', required='required',readonly='')

                            //.form-group
                                .col-lg-10.col-lg-offset-2
                                    button#submitRelease.btn.btn-primary.btn-lg.btn-block(type='submit') Update