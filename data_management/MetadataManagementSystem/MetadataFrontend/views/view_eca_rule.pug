extends layout
block headers
    link(rel='stylesheet', href='/stylesheets/loading.css')
    script(src='/js/client_view_eca_rule.js')
    link(href='/js/select2-4.0.3/dist/css/select2.min.css', rel='stylesheet', type='text/css')
    script(src='/js/select2-4.0.3/dist/js/select2.min.js')
    link(rel='stylesheet', href='/stylesheets/select2-bootstrap.min.css')

block content

    .container
        .banner
            .row
                .col-lg-8.col-md-7.col-sm-6
                    h2 New ECA Rule
                    br

            .container-fluid
                .col-lg-8
                    .well.bs-component
                        form#ecaRuleForm(role='form').form-horizontal
                            .form-group#nameForm
                                label.col-lg-2.control-label(for='name') Name
                                .col-lg-10
                                    input#name.form-control(type='text', name='name', required='required',readonly='')

                            .form-group#bdiOntologyForm
                                label.col-lg-2.control-label(for='bdiOntology') Tenant
                                .col-lg-10
                                    input#bdiOntology.form-control(type='text',style="width:100%",required='required',readonly='')

                            .form-group#globalElementForm
                                label.col-lg-2.control-label(for='feature') Feature
                                .col-lg-10
                                    input#feature.form-control(type='text',required='required',readonly='')

                            .form-group#operatorForm
                                label.col-lg-2.control-label(for='operator') Operator
                                .col-lg-10
                                    input#operator.form-control(type='text',style="width:100%",readonly='')

                            .form-group#predicateForm
                                label.col-lg-2.control-label(for='predicate') Predicate
                                .col-lg-10
                                    input#predicate.form-control(type='text',style="width:100%",readonly='')

                            .form-group#valueForm
                                label.col-lg-2.control-label(for='value') Value
                                .col-lg-10
                                    input#value.form-control(type='text', name='value', required='required',readonly='')

                            .form-group#windowTimeForm
                                label.col-lg-2.control-label(for='windowTime') Bounded in a Time Window of (min)
                                .col-lg-10
                                    input#windowTime.form-control(type='text', name='windowTime', required='required',readonly='')

                            .form-group#windowSizeForm
                                label.col-lg-2.control-label(for='windowSize') Number of Elements in Window
                                .col-lg-10
                                    input#windowSize.form-control(type='text', name='windowSize', required='required',readonly='')

                            .form-group#actionForm
                                label.col-lg-2.control-label(for='feature') Action
                                .col-lg-10
                                    input#action.form-control(type='text',style="width:100%",readonly='')
